<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f7ff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#e3f7ff"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                  />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_alignTop="@+id/img_sex"
                    android:layout_toEndOf="@+id/img_sex"
                    android:id="@+id/linearLayout10">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:text="Swan"
                        android:textSize="15sp"

                        android:textColor="#42c3f7"
                        android:paddingTop="9dp" />



                    <TextView
                        android:id="@+id/tv_id"
                        android:lines="1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="希望我的孩子健康成长!"
                        android:textSize="12sp"
                        android:gravity="bottom"
                        android:textColor="#999999"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
                <Button
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_right_arrow"
                    android:id="@+id/aa"
                    android:clickable="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="36dp"
                    android:layout_marginRight="30dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_selfDetail"
                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/aa"
                    android:layout_toEndOf="@+id/linearLayout10" />
            </RelativeLayout>

        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="13dp"
                android:layout_height="16dp"

                android:padding="3dp"
                android:src="@drawable/icon_delete_cache"
                android:layout_marginLeft="15dp"
                android:layout_alignBottom="@+id/bb"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView3"
                android:lines="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:textSize="12sp"
                android:gravity="bottom"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_alignTop="@+id/bb"
                android:layout_toEndOf="@+id/imageView1" />
            <TextView
                android:id="@+id/data_cache"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="25mb"

                android:textSize="15dp"
                android:textColor="#aaaaaa"
                android:gravity="center_vertical|end"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/bb"
                android:layout_marginRight="15dp" />

            <Button

                android:layout_width="9dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_right_arrow"
                android:id="@+id/bb"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_clear"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/bb"
                android:layout_toEndOf="@+id/textView3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:padding="3dp"
                android:src="@drawable/icon_about_us"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />







            <TextView
                android:id="@+id/tex"
                android:lines="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageVie" />
            <Button
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_right_arrow"
                android:id="@+id/cc"
                android:clickable="false"
                android:layout_alignBottom="@+id/imageVie"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_aboutUs"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/cc"
                android:layout_toEndOf="@+id/tex" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#c7c7c7"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageVi"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:padding="3dp"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp" />
            <TextView
                android:id="@+id/textV"
                android:lines="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给与好评"
                android:textSize="12sp"
                android:gravity="bottom"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageVi" />
            <Button
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:clickable="false"
                android:background="@drawable/icon_right_arrow"
                android:id="@+id/dd"
                android:layout_alignBottom="@+id/imageVi"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_goodSp"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/dd"
                android:layout_toEndOf="@+id/textV" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:padding="3dp"
                android:src="@drawable/icon_quit"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/ee"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/textVie"
                android:lines="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出账号"
                android:textSize="12sp"
                android:gravity="bottom"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView" />
            <Button
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_right_arrow"
                android:id="@+id/ee"
                android:clickable="false"
                android:layout_alignBottom="@+id/textVie"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_exit"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/ee"
                android:layout_toEndOf="@+id/textVie" />
        </RelativeLayout>


    </LinearLayout>







</RelativeLayout>
