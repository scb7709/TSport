<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="me.lam.maidong.fragment.MaiDongActivityFragment">

    <RelativeLayout
        android:id="@+id/fragment_maidong_pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_maidong_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#8ad6f1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_maidong_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="总运动时长"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/fragment_maidong_TotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_maidong_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="平均心率"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/fragment_maidong_AvgHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/fragment_maidong_textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/fragment_maidong_AvgHeartRate"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/fragment_maidong_AvgHeartRate"
                        android:text="次/分"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="卡路里"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/fragment_maidong_TotalEnergyExpenditure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/fragment_maidong_textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/fragment_maidong_TotalEnergyExpenditure"
                        android:layout_marginLeft="18dp"
                        android:layout_toEndOf="@+id/fragment_maidong_TotalEnergyExpenditure"
                        android:text="千卡"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


        <!--以上是数据统计部分-->


        <LinearLayout
            android:id="@+id/fragment_maidong_showdata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fragment_maidong_bar"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fragment_maidong_process_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_maidong_last"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/fragment_maidong_jian"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_left_arrow" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="202dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/fragment_maidong_linearLayout1"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="bottom"
                        android:background="@drawable/r"
                        android:orientation="vertical">

                        <me.lam.maidong.circle.RoundProgressBar
                            android:id="@+id/fragment_maidong_roundProgressBar2"
                            android:layout_width="140dip"
                            android:layout_height="140dip"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_sport_time"
                            android_custom:roundColor="@android:color/transparent"
                            android_custom:roundProgressColor="#4ad2f2"
                            android_custom:roundWidth="23dip"
                            android_custom:textColor="#42c3f7"
                            android_custom:textSize="18sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_maidong_last"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="有效运动时长"
                            android:textColor="#999999"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/fragment_maidong_youxiaoyundong"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="#42c3f7"
                            android:textSize="24dp" />
                    </LinearLayout>
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/fragment_maidong_jia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_right_arrow" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_maidong_shanshidown"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_maidong_SportRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#42c3f7"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                    <TextView
                        android:id="@+id/fragment_maidong_xiaohaozhifan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消耗脂肪："
                        android:textColor="#8ad6f1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/fragment_maidong_Fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text=""
                        android:textColor="#8ad6f1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/fragment_maidong_jianyisheru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="     建议摄入："
                        android:textColor="#8ad6f1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/fragment_maidong_SuggestEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"

                        android:text=""
                        android:textColor="#8ad6f1"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_right_arrow" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_maidong_textView17"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fragment_maidong_line1"
                android:layout_centerHorizontal="true" />


            <LinearLayout
                android:id="@+id/fragment_maidong_linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/fragment_maidong_jianyisheru"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:visibility="visible">

                <include
                    layout="@layout/public_barchat_layout"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="180dp"></include>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/analizegray"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"

                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_maidong_TotalLowRateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="#42c3f7"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:text="低强度运动"
                            android:textColor="#c7c7c7"
                            android:textSize="11.5dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"

                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_maidong_TotalMediumRateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="#42c3f7"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:text="中强度运动"
                            android:textColor="#c7c7c7"
                            android:textSize="11.5dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"

                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_maidong_TotalHighRateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="#42c3f7"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:text="高强度运动"
                            android:textColor="#c7c7c7"
                            android:textSize="11.5dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:id="@+id/fragment_maidong_pingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_maidong_linearLayout6"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_maidong_yundongpingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="运动评价"
                    android:textColor="#42c3f7" />

                <TextView
                    android:id="@+id/fragment_maidong_SportEvaluate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="#8ad6f1" />
            </LinearLayout>


            <TextView
                android:id="@+id/fragment_maidong_textView44"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fragment_maidong_linearLayout6"
                android:layout_alignStart="@+id/fragment_maidong_textView17"
                android:layout_alignTop="@+id/fragment_maidong_Fat"
                android:layout_toStartOf="@+id/fragment_maidong_jianyisheru" />


            <TextView
                android:id="@+id/fragment_maidong_textView11"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fragment_maidong_linearLayout6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/fragment_maidong_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fragment_maidong_pingjia"
                android:layout_centerHorizontal="true"

                ></TextView>


            <LinearLayout
                android:id="@+id/fragment_maidong_heartrate_time"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/fragment_maidong_line1"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/fragment_maidong_heartrate_time_fiveman_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/fragment_maidong_heartrate_time_bar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/radoius_shape"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_maidong_heartrate_time_bar_layout_blackround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/black_icon_shape"></View>

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="25dp"
                                android:text="0点"
                                android:textColor="#333333"></TextView>

                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/black_icon_shape"></View>

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="25dp"
                                android:text="6点"
                                android:textColor="#333333"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/black_icon_shape"></View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="25dp"
                                android:text="12点"
                                android:textColor="#333333"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/black_icon_shape"></View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="25dp"
                                android:text="18点"
                                android:textColor="#333333"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/black_icon_shape"></View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="25dp"
                                android:text="24点"
                                android:textColor="#333333"></TextView>

                        </LinearLayout>


                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
