<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/roundProgressBar4"
            android:layout_width="68dip"

            android:layout_height="68dip"
            android:layout_below="@+id/textView38"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="6dp">


            <TextView
                android:id="@+id/pingji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#42c3f7"
                android:textSize="32dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/roundProgressBar4"
            android:text="总卡路里" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView34"
            android:layout_toStartOf="@+id/roundProgressBar4"
            android:text="平均卡路里" />

        <TextView
            android:id="@+id/AvgCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView34"
            android:layout_below="@+id/textView34"
            android:text="0"
            android:textColor="#42c3f7"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/TotalCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/textView35"
            android:text="0"
            android:textColor="#42c3f7"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TotalCal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="消耗评级" />

        <TextView
            android:id="@+id/TotalDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MaxTotalTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="总运动: "
            android:textColor="#666666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView41"
            android:layout_alignTop="@+id/TotalDays"
            android:layout_marginTop="15dp"
            android:text="过去7天"
            android:textColor="#c7c7c7"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="342dp"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#c7c7c7" />

        <TextView
            android:id="@+id/MaxTotalTime"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView41"
            android:layout_alignStart="@+id/textView41"
            android:text="0"
            android:textColor="#c7c7c7"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TotalCal"
