<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#42c3f7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:background="#42c3f7">

        <RelativeLayout
            android:id="@+id/activity_main_bt_data"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp">

            <Button
                android:layout_width="19dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_calender"
                android:clickable="false"
                android:textColor="#fafafa"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_main_title"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/activity_main_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:text=""
                android:textColor="#8ad6f1"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/activity_main_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/activity_main_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#8ad6f1"
                android:textSize="13dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/activity_main_msg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:src="@drawable/icon_messages" />
        </RelativeLayout>


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#ffffff"
        android:orientation="horizontal">


    </FrameLayout>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fragment"
        android:layout_gravity="bottom"
        android:background="#c7c7c7"
        android:text="New Text" />


    <RadioGroup
        android:id="@+id/activity_main_tabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:padding="10dp"
        android:textColor="@drawable/maintab_text_color_selector">

        <RadioButton
            android:id="@+id/activity_main_maindong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/maintab_maidong_bg_seletor"
            android:gravity="center_horizontal"
            android:text="迈动"
            android:textColor="@drawable/maintab_text_color_selector"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/activity_main_analyze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/maintab_analyze_bg_seletor"
            android:gravity="center_horizontal"
            android:text="分析"
            android:textColor="@drawable/maintab_text_color_selector"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/activity_main_maidongcircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/maintab_maidongcircle_bg_seletor"
            android:gravity="center_horizontal"
            android:text="资讯"
            android:textColor="@drawable/maintab_text_color_selector"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/activity_main_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/maintab_my_bg_seletor"
            android:gravity="center_horizontal"
            android:text="我"
            android:textColor="@drawable/maintab_text_color_selector"
            android:textSize="12dp" />
    </RadioGroup>
</LinearLayout>